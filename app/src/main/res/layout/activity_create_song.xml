<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android"
    tools:context=".view.ActivityCreateSong">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtTitleAdmin2"
            android:layout_width="264dp"
            android:layout_height="0dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="186dp"
            android:fontFamily="cursive"
            android:text="@string/createSong"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnAddContent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etTitleSong"
            android:layout_width="291dp"
            android:layout_height="42dp"
            android:layout_marginStart="58dp"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="28dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/etTitleSong"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#F8E9E9"
            app:layout_constraintBottom_toTopOf="@+id/etWriter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleAdmin2" />

        <EditText
            android:id="@+id/etWriter"
            android:layout_width="284dp"
            android:layout_height="39dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="42dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/etWriter"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#F8E9E9"
            app:layout_constraintBottom_toTopOf="@+id/btnAddContent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etTitleSong" />

        <Spinner
            android:id="@+id/spLev"
            android:layout_width="105dp"
            android:layout_height="38dp"
            android:layout_marginEnd="78dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" />

        <Button
            android:id="@+id/btnAddImage"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="351dp"
            android:text="@string/addImg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnAddContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleAdmin2"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="69dp"
            android:layout_height="45dp"
            android:layout_marginEnd="25dp"
            android:contentDescription="@string/imageContent"
            app:layout_constraintBottom_toBottomOf="@+id/btnAddImage"
            app:layout_constraintEnd_toStartOf="@+id/btnAddContent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/btnAddImage"
            app:layout_constraintTop_toTopOf="@+id/btnAddImage"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageViewContent"
            android:layout_width="68dp"
            android:layout_height="46dp"
            android:layout_marginEnd="26dp"
            android:contentDescription="@string/imageContent"
            app:layout_constraintBottom_toBottomOf="@+id/btnAddContent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/btnAddContent"
            app:layout_constraintTop_toTopOf="@+id/btnAddContent"
            app:layout_constraintVertical_bias="0.25" />

        <Spinner
            android:id="@+id/spGenre"
            android:layout_width="298dp"
            android:layout_height="49dp"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/etLinkMusic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/etLinkMusic"
            android:layout_width="302dp"
            android:layout_height="54dp"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="18dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/linkMusic"
            android:inputType="textPersonName"
            android:textColorHint="#EFE9E9"
            app:layout_constraintBottom_toTopOf="@+id/btnSave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spGenre" />

        <Button
            android:id="@+id/btnAddContent"
            android:layout_width="93dp"
            android:layout_height="52dp"
            android:layout_marginEnd="103dp"
            android:layout_marginBottom="347dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:text="@string/addContent"
            android:textColorHint="#121111"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnAddImage"
            app:layout_constraintTop_toBottomOf="@+id/txtTitleAdmin2" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="124dp"
            android:layout_height="44dp"
            android:layout_marginBottom="12dp"
            android:text="@string/btnSaveCreateSong"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etLinkMusic" />

        <TextView
            android:id="@+id/txtAlert"
            android:layout_width="191dp"
            android:layout_height="48dp"
            android:text="@string/alert"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="95dp"
            android:layout_height="39dp"
            android:layout_marginStart="43dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="38dp"
            android:gravity="center"
            android:text="@string/textViewLv"
            android:textColor="#0C0C0C"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/spGenre"
            app:layout_constraintEnd_toStartOf="@+id/spLev"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAddContent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>